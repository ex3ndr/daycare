{
  "name": "daycare",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace daycare-cli run build",
    "dashboard": "yarn workspace daycare-dashboard dev",
    "dev": "DAYCARE_ROOT_DIR=~/.dev yarn workspace daycare-cli run dev",
    "factory:build": "node ./scripts/daycareFactoryBuildPrompt.mjs",
    "release": "yarn workspace daycare-cli run release",
    "recipe": "yarn workspace daycare-cli run recipe",
    "test": "yarn workspaces run test",
    "test:watch": "yarn workspaces run test:watch",
    "typecheck": "yarn workspaces run typecheck"
  }
}

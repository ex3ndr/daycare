{
  "name": "daycare",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "scripts": {
    "app": "yarn workspace daycare-app web",
    "build": "yarn workspace daycare-cli run build",
    "dashboard": "yarn workspace daycare-dashboard dev",
    "dev": "DAYCARE_ROOT_DIR=~/.dev yarn workspace daycare-cli run dev",
    "env": "node ./scripts/envRun.mjs",
    "env:link": "node ./scripts/envLink.mjs",
    "env:proxy:start": "portless proxy start",
    "env:proxy:stop": "portless proxy stop",
    "factory:build": "node ./scripts/daycareFactoryBuildPrompt.mjs",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "prebuild": "yarn workspace daycare-app prebuild",
    "release": "yarn workspace daycare-cli run release",
    "recipe": "yarn workspace daycare-cli run recipe",
    "test": "yarn workspaces run test",
    "test:watch": "yarn workspaces run test:watch",
    "typecheck": "yarn workspaces run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2"
  }
}
